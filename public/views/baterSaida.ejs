<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <a href="/">Home</a>
    <form action="/buscarFuncionario" method="POST" class="w-50 mx-auto my-5">
        <div class="mb-3">
        <label for="funcionarioId" class="form-label">Id do funcionario</label>
        <input type="number" name="funcionarioId" id="funcionarioId" class="form-control">
        <input type="number" name="numFun" id="numFun" class="form-control" value="1" style="display: none;">
        <input type="submit" class="btn btn-warning my-2"> </input>
    </div>
    </form>
    <form action="/baterSaida" method="post" class="w-50 mx-auto my-5">

        <div class="mb-3">
            <label for="" class="form-label">Nome do funcionario</label>
            <input type="text" name="nome" id="nome" class=" form-control" readonly value="<%=funcionario.nome ? funcionario.nome : 'Funcionario nÃ£o encontrado'%>" required>
        </div>

        <div class="mb-3">
            <label for="data" id="" class="form-label">Data</label>
            <input type="text" name="data" class="form-control" id="data" readonly  required >
        </div>
        <div class="mb-3">
            <label for="saida" id="" class="form-label">Horario de saida</label>

            <input type="text" name="saida" id="horarioAtual" class="form-control" readonly required>

        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>


    <script>
        var data = new Date().toLocaleDateString();
        var horaAtual = new Date().toLocaleTimeString();
        const dataInput = document.getElementById("data");
        const entradaInput  = document.getElementById("horarioAtual");
        const saidaInput = document.getElementById("saida");
        console.log(data)

       
        dataInput.value = data;
        entradaInput.value = horaAtual;
        saidaInput.value = horaAtual;
        
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>